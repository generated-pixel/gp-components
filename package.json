{
  "name": "gp-ui-suite",
  "version": "0.0.1",
  "scripts": {
    "ng": "ng",
    "ng:serve": "ng serve",
    "start": "npm-run-all -p extract:watch build:serve",
    "build": "ng build",
    "build:watch": "ng build --watch --aot --configuration=development",
    "build:serve": "ng serve demo",
    "watch": "ng build --watch --configuration=development",
    "test": "ng test",
    "prebuild": "pnpm run extract:classes",
    "extract:watch": "node tools/watch-css-classes.js",
    "extract:classes": "node tools/extract-css-classes.js",
    "lib:build": "ng build gp-ui --configuration=production && node tools/bundle-css.js",
    "lib:watch": "ng build gp-ui --watch --configuration=development"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "dependencies": {
    "@angular/common": "^21.0.6",
    "@angular/compiler": "^21.0.6",
    "@angular/core": "^21.0.6",
    "@angular/forms": "^21.0.6",
    "@angular/platform-browser": "^21.0.6",
    "@angular/router": "^21.0.6",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^21.0.4",
    "@angular/cli": "^21.0.4",
    "@angular/compiler-cli": "^21.0.6",
    "@types/jasmine": "^5.1.15",
    "angular-eslint": "19.0.2",
    "eslint": "^9.13.0",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^21.0.6",
    "npm-run-all": "^4.1.5",
    "typescript": "~5.9.2",
    "typescript-eslint": "8.10.0"
  }
}
