/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "paths": {
      "gp-components": [
        "./packages/gp-components/src/public-api",
        "./dist/gp-components"
      ],
      "gp-components/*": [
        "./packages/gp-components/src/*/public-api",
        "./dist/gp-components/*"
      ],
      "gp-components/src/*": [
        "./packages/gp-components/src/*/public-api",
        "./dist/gp-components/src/*"
      ]
    },
    "noImplicitOverride": false,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "preserve"
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "typeCheckHostBindings": true,
    "strictTemplates": true
  },
  "files": [],
  "references": [
    {
      "path": "./packages/gp-components/tsconfig.lib.json"
    },
    {
      "path": "./packages/gp-components/tsconfig.spec.json"
    },
    {
      "path": "./apps/demo/tsconfig.app.json"
    },
    {
      "path": "./apps/demo/tsconfig.spec.json"
    }
  ]
}
